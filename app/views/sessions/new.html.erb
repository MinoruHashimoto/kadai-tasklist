<h1>ログイン画面</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email %>

  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>


  <%= f.submit 'ログイン' %>
  
  <p>ユーザ登録がまだの方は<%= link_to 'こちら', signup_path, class: 'btn btn-lg btn-primary' %></p>
  
<% end %>